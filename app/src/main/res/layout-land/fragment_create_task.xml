<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskFragment"
    android:orientation="vertical"
    android:background="@color/darkAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_title"
            android:textColor="@color/whiteAccent"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <EditText
        android:textColor="@color/whiteAccent"
        android:textColorHint="@color/whiteAccent"
        android:backgroundTint="@color/primary"
        android:autofillHints="@string/task_name_hint"
        android:inputType="text"
        android:hint="@string/task_name_hint"
        android:id="@+id/edit_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:textColor="@color/whiteAccent"
        android:textColorHint="@color/whiteAccent"
        android:backgroundTint="@color/primary"
        android:autofillHints="@string/task_description_hint"
        android:inputType="text"
        android:hint="@string/task_description_hint"
        android:id="@+id/edit_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:textColor="@color/whiteAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_label_end"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:inputType="datetime"
            android:id="@+id/edit_task_endDate"
            android:hint="@string/task_Date_hint"
            android:textColor="@color/whiteAccent"
            android:textColorHint="@color/whiteAccent"
            android:backgroundTint="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:focusable="false"/>
        <EditText
            android:inputType="datetime"
            android:textColor="@color/whiteAccent"
            android:textColorHint="@color/whiteAccent"
            android:backgroundTint="@color/primary"
            android:id="@+id/edit_task_endTime"
            android:hint="@string/task_Time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:focusable="false"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/primary"
        android:text="@string/submit"
        android:textColor="@color/whiteAccent"
        android:textSize="18sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>
    
</LinearLayout>